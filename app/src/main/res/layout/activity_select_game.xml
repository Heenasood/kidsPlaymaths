<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/back"
    tools:context=".SelectGameActivity">


    <TextView
        android:id="@+id/text_view_apptitle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="8dp"
        android:fontFamily="cursive"
        android:includeFontPadding="true"
        android:text="Play-Maths"
        android:textAlignment="center"
        android:textColor="@android:color/holo_purple"
        android:textSize="55sp"
         />

    <TextView
        android:id="@+id/text_view_highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="52dp"
        android:layout_above="@id/button_start_quiz"
        android:layout_centerHorizontal="true"
        android:text="Highscore: 0"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="27sp"
        android:background="@null" />

    <Button
        android:id="@+id/button_start_quiz"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:background="@drawable/custom_sound_button"
        android:layout_centerInParent="true"
        android:textColor="#FFFFFF"
        android:textSize="45dp"
        android:fontFamily="cursive"
        android:text="Go" />

    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@+id/button_start_quiz"
        android:background="@drawable/custom_button"
        android:popupBackground="@drawable/custom_button"
        android:popupElevation="20dp"
        android:textAlignment="center"
        android:layout_marginTop="36dp" />

    <Spinner
        android:id="@+id/spinner_difficulty"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/custom_button"
        android:layout_below="@+id/spinner_category"
        android:popupBackground="@drawable/custom_button"
        android:textAlignment="center"
        android:layout_marginTop="26dp" />
</LinearLayout>