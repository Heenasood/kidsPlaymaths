<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_list"
    android:weightSum="10"
    tools:context=".SelectPracticeTypeActivity">


    <TextView
        android:id="@+id/textGrid"
        android:layout_width="wrap_content"
        android:layout_height="105dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="40dp"
        android:height="150dp"
        android:fontFamily="cursive"
        android:marqueeRepeatLimit="@android:integer/config_mediumAnimTime"
        android:text="Practice Sessions"
        android:textColor="#ffffff"
        android:textSize="44sp" />



    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

    <GridLayout
        android:id="@+id/mainGrid"
        android:rowCount="3"
        android:columnCount="1"
        android:layout_gravity="center_horizontal"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_weight="8"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:padding="14dp">

        <!-- ROW 1  -->
        <!-- COLUMN 1  -->



        <androidx.cardview.widget.CardView
            android:id="@+id/Addition"
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_rowWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/practiceAddition"
                    android:src="@drawable/add4"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="110dp"
                    android:layout_height="110dp" />

                <TextView
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:text="\nAddition"
                    android:textColor="@android:color/holo_purple"
                    android:textSize="27sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

        <!-- COLUMN 2  -->

        <androidx.cardview.widget.CardView
            android:id="@+id/Subtraction"
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_rowWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/practiceSubtraction"
                    android:src="@drawable/add4"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="110dp"
                    android:layout_height="110dp" />

                <TextView
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:text="\nSubraction"
                    android:textColor="@android:color/holo_purple"
                    android:textSize="27sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>



        <!-- ROW 2  -->
        <!-- COLUMN 1  -->

        <androidx.cardview.widget.CardView
            android:id="@+id/Multiplication"
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_rowWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/practiceMultiplication"
                    android:src="@drawable/add4"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="110dp"
                    android:layout_height="110dp" />

                <TextView
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:text="\nMultiplication"
                    android:textColor="@android:color/holo_purple"
                    android:textSize="27sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>

        <!-- COLUMN 2  -->

        <androidx.cardview.widget.CardView
            android:id="@+id/Division"
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_rowWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/practiceDivision"
                    android:src="@drawable/add4"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="110dp"
                    android:layout_height="110dp" />

                <TextView
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:text="\nDivision"
                    android:textColor="@android:color/holo_purple"
                    android:textSize="27sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>


        <!-- ROW 3  -->
        <!-- COLUMN 1  -->

        <androidx.cardview.widget.CardView
            android:id="@+id/Mix"
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_rowWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/practiceMix"
                    android:src="@drawable/add4"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="110dp"
                    android:layout_height="110dp" />

                <TextView
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:text="\nMix"
                    android:textColor="@android:color/holo_purple"
                    android:textSize="27sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </GridLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>